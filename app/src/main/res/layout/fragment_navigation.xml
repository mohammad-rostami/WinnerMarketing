<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="top|right"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_data_rv_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:gravity="top|right"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/colorPrimary"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="left|center_vertical"
                android:padding="30dp"
                android:text="علی حسینی"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/fragment_nav_item_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical|right"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="16dp"
                    android:text="پیامها"
                    android:textColor="@color/darkGray"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:src="@mipmap/ic_mail"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:tint="@color/lightGray" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_nav_ll_item_two"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_nav_item_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="پروفایل"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_profile"
                android:tint="@color/lightGray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_nav_item_history"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:alpha="0.4"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/fragment_nav_txt_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="مطالب موفقیت"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_chat"
                android:tint="@color/lightGray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_nav_item_three"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="خدمات"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_meditation"
                android:tint="@color/lightGray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_nav_item_four"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_nav_txt_agency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="مشتریان"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_contact_us"
                android:tint="@color/lightGray" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fragment_nav_item_five"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="پروژه ها"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_test"
                android:tint="@color/lightGray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_nav_item_six"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="داشبورد"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_meditation"
                android:tint="@color/lightGray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_nav_item_seven"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="آموزش"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_story"
                android:tint="@color/lightGray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_nav_item_eight"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="ارتباط با ما"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_story"
                android:tint="@color/lightGray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_nav_item_exit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="خروج"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_exit"
                android:tint="@color/lightGray" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
